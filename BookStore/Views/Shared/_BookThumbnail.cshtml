@model BookViewModel

<div class="card mb-4 shadow-sm">
    <img class="bd-placeholder-img card-img-top" src="@(string.IsNullOrEmpty(Model.ImageUrl) ? "/images/noimage.jpg" : Model.Title)" />
    <div class="card-body">
        <h3 class="card-title">@(string.IsNullOrEmpty(Model.Title) ? "Book Title" : Model.Title)</h3>
        <p class="card-text">@(string.IsNullOrEmpty(Model.Description) ? "Book Description" : Model.Description)</p>
        <div class="d-flex justify-content-between align-items-center">
            <div class="btn-group">
                <a asp-controller="Book" asp-action="GetBook" asp-route-id="@Model.Id" class="btn btn-sm btn-outline-secondary">View details</a>
            </div>
            <small class="text-muted">@(string.IsNullOrEmpty(Model.Author) ? "Book Title" : Model.Author)</small>
        </div>
    </div>
</div>