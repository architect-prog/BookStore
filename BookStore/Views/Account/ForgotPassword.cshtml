@model BookStore.ViewModels.UserViewModels.ForgotPasswordViewModel

@{
    ViewData["Title"] = "ForgotPassword";
}

<div class="container">
    <h4>Forgot Password?</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            @if (Model?.EmailSent == true)
            {
                <div class="alert alert-success" role="alert">
                    <p>If you are registered with us, we have sent an email with restore password instruction</p>
                </div>
            }
            else
            {
                <form asp-action="ForgotPassword">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>                  
                    <div class="form-group">
                        <input type="submit" value="Continue" class="btn btn-primary" />
                    </div>
                </form>
            }            
        </div>
    </div>

    <div>
        <a asp-controller="Account" asp-action="SignIn">Sign in</a>
    </div>
</div>